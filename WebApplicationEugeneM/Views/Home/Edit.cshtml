@model WebApplicationEugeneM.Models.User
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>Редактирование пользователя в базе даных</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">ФИО</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Age">Возраст</label><br />
        <input type="number" asp-for="Age" />
    </p>
    <p>
        <label asp-for="Company!.Name">Компания</label><br />
        <input type="text" asp-for="Company!.Name" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>
